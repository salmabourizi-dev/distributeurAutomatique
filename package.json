{
  "name": "vending-machine",
  "version": "1.0.0",
  "description": "Vending machine application with Node.js backend and React frontend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "jest --watchAll",
    "client-install": "cd client && npm install",
    "install-all": "npm install && npm run client-install",
    "build": "cd client && npm run build"
  },
  "keywords": [
    "vending machine",
    "node",
    "react"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  }
}